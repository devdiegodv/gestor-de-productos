{{!--
    Partial: errors.hbs
    Muestra una lista de mensajes de error en tarjetas modernas y responsivas.
--}}
{{#each errors}}
    <div class="custom-error-alert alert-danger shadow-lg rounded-4 p-4 mb-4 d-flex align-items-center animate__animated animate__fadeInDown" role="alert">
        <div class="flex-grow-1">
            <i class="bi bi-exclamation-triangle-fill me-2 text-danger fs-4"></i>
            <span class="fw-bold">{{text}}</span>
        </div>
        <button type="button" class="btn-close ms-3" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{{/each}}