<div class="col-md-6 col-lg-4 mx-auto my-4">
    <!-- Card con sombra y borde suave -->
    <div class="card shadow-lg border-light rounded">
        <div class="card-header text-center bg-primary text-white">
            <h3 class="card-title mb-0">Nueva Nota</h3>
        </div>
        <div class="card-body">
            <!-- Formulario de Nueva Nota -->
            <form action="/notas/nota-nueva" method="POST" aria-labelledby="note-form">
                <!-- Campo para el Título -->
                <div class="mb-3">
                    <label for="title" class="form-label">Título</label>
                    <input type="text" id="title" name="title" class="form-control" placeholder="Ingrese el título de la nota" autofocus required>
                </div>

                <!-- Campo para la Descripción -->
                <div class="mb-3">
                    <label for="description" class="form-label">Descripción</label>
                    <textarea id="description" name="description" class="form-control" rows="5" placeholder="Describa la nota" required></textarea>
                </div>

                <!-- Botón para Guardar -->
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
